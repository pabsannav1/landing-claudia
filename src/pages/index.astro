---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Claudia | Fisioterapeuta Pediátrica">
  <!-- NAV -->
  <header class="header">
    <nav class="nav">
      <a href="#" class="logo"><img src="/logo1.jpg" alt="Claudia" class="logo-img" /></a>
      <ul class="nav-links">
        <li><a href="#video">Quién soy</a></li>
        <li><a href="#servicios">Qué hago</a></li>
        <li><a href="#galeria">Cómo trabajo</a></li>
        <li><a href="#ubicaciones">Dónde encontrarme</a></li>
        <li><a href="#contacto">Contacto</a></li>
      </ul>
    </nav>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-text">
      <p class="hero-greeting">Hola, soy</p>
      <h1 class="hero-name">Claudia Cabotá</h1>
      <p class="hero-tagline">Fisioterapeuta pediátrica</p>
      <a href="#contacto" class="btn">Contáctame</a>
    </div>
    <div class="hero-image">
      <img src="/foto.jpeg" alt="Claudia - Fisioterapeuta Pediátrica" class="hero-photo" />
    </div>
  </section>

  <!-- VSL / VIDEO -->
  <section id="video" class="section section-alt">
    <h2 class="section-title">Quién soy</h2>
    <div class="video-wrapper">
      <video class="video-player" controls preload="metadata" playsinline>
        <source src="/video.mp4#t=0.001" type="video/mp4" />
      </video>
    </div>
  </section>

  <!-- SERVICIOS -->
  <section id="servicios" class="section">
    <h2 class="section-title">Qué hago</h2>
    <div class="services-grid">
      <div class="service-card">
        <span class="card-icon">&#129329;</span>
        <h3>Asesoramiento lactancia materna</h3>
        <p>Sesiones presenciales u online.</p>
      </div>
      <div class="service-card">
        <span class="card-icon">&#129520;</span>
        <h3>Seguimiento y valoración del neurodesarrollo</h3>
        <p>Evaluación de los hitos del desarrollo psicomotor de tu bebé.</p>
      </div>
      <div class="service-card">
        <span class="card-icon">&#128118;</span>
        <h3>Deformaciones craneales</h3>
        <p>Prevención y tratamiento de plagiocefalias y asimetrías.</p>
      </div>
      <div class="service-card">
        <span class="card-icon">&#129494;</span>
        <h3>Alteraciones neuromusculares</h3>
        <p>Abordaje de tortícolis, hipotonía y otras alteraciones del tono.</p>
      </div>
      <div class="service-card">
        <span class="card-icon">&#128153;</span>
        <h3>Problemas digestivos</h3>
        <p>Cólicos, reflujo y otras molestias digestivas del lactante.</p>
      </div>
      <div class="service-card">
        <span class="card-icon">&#127788;</span>
        <h3>Fisioterapia respiratoria</h3>
        <p>Técnicas para mejorar la función respiratoria de los más pequeños.</p>
      </div>
    </div>
  </section>

  <!-- GALERÍA: CÓMO TRABAJO -->
  <section id="galeria" class="section section-alt">
    <h2 class="section-title">Cómo trabajo</h2>
    <div class="gallery-grid">
      <img src="/foto-1.jpeg" alt="Claudia trabajando" class="gallery-item" />
      <img src="/foto-2.jpeg" alt="Claudia trabajando" class="gallery-item" />
      <img src="/foto-3.jpeg" alt="Claudia trabajando" class="gallery-item" />
    </div>
  </section>

  <!-- UBICACIONES -->
  <section id="ubicaciones" class="section">
    <h2 class="section-title">Dónde encontrarme</h2>
    <div class="locations-grid">
      <a href="https://share.google/UR14fbb9e0X6NnbAw" target="_blank" rel="noopener" class="location-card">
        <span class="card-icon">&#127973;</span>
        <h3>Clínica Leal Graciani</h3>
        <p>Nervión, Sevilla</p>
      </a>
      <a href="https://share.google/8Vk0TA9JjsKNsJCy7" target="_blank" rel="noopener" class="location-card">
        <span class="card-icon">&#127973;</span>
        <h3>Edificio Palmera Center</h3>
        <p>C/ Historiador Juan Manzano 2, Condequinto, Sevilla</p>
      </a>
      <a href="https://share.google/vsyvDARm4ZkdrbCTP" target="_blank" rel="noopener" class="location-card">
        <span class="card-icon">&#127973;</span>
        <h3>Fisioshana</h3>
        <p>Mairena del Alcor, Sevilla</p>
      </a>
    </div>
  </section>

