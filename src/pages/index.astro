<style>
  /* HEADER & NAV */
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(226, 215, 229, 0.9);
    backdrop-filter: blur(10px);
    z-index: 100;
    border-bottom: 1px solid #eee;
  }

  .nav {
    max-width: 960px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 40px;
    width: auto;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: #555;
    transition: color 0.3s;
  }

  .nav-links a:hover {
    color: #9b59b6;
  }

  /* HERO */
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 3rem;
    padding: 7rem 4rem 4rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-greeting {
    font-size: 1rem;
    font-weight: 400;
    color: #888;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .hero-name {
    font-size: clamp(2.8rem, 6vw, 4.5rem);
    font-weight: 700;
    color: #9b59b6;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .hero-tagline {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 420px;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-photo {
    width: 100%;
    max-width: 360px;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 20px 60px rgba(155, 89, 182, 0.18);
  }

  /* BUTTONS */
  .btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: #9b59b6;
    color: #fff;
    border-radius: 12px;
    font-weight: 500;
    font-size: 0.95rem;
    transition: background-color 0.3s, transform 0.2s;
  }

  .btn:hover {
    background-color: #ab6ec5;
    transform: translateY(-2px);
  }

  .btn-outline {
    background-color: transparent;
    color: #9b59b6;
    border: 2px solid #9b59b6;
  }

  .btn-icon {
    width: 1.1em;
    height: 1.1em;
    vertical-align: -0.15em;
    margin-right: 0.4rem;
  }

  .btn-outline:hover {
    background-color: #9b59b6;
    color: #fff;
  }

  /* SECTIONS */
  .section {
    padding: 5rem 2rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .section-alt {
    max-width: 100%;
    background-color: #e2d7e5;
  }

  .section-alt > * {
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #9b59b6;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  /* VIDEO / VSL */
  .video-wrapper {
    max-width: 720px;
    margin: 0 auto;
  }

  .video-player {
    width: 100%;
    border-radius: 16px;
  }

  /* SHARED CARD STYLES */
  .card-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }

  /* SERVICES */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .service-card {
    background: #fff;
    padding: 2rem 1.5rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s;
  }

  .service-card:hover {
    transform: translateY(-4px);
  }

  .service-card h3 {
    font-size: 1.05rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .service-card p {
    font-size: 0.9rem;
    color: #666;
  }

  /* GALLERY */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 960px;
    margin: 0 auto;
  }

  .gallery-item {
    width: 100%;
    aspect-ratio: 3 / 4;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  /* LOCATIONS */
  .locations-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .location-card {
    background: #fff;
    padding: 2rem 1.5rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s;
  }

  .location-card:hover {
    transform: translateY(-4px);
  }

  .location-card h3 {
    font-size: 1.05rem;
    font-weight: 600;
    color: #9b59b6;
    margin-bottom: 0.5rem;
  }

  .location-card p {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.5;
  }

  /* CONTACT */
  .contact-text {
    text-align: center;
    font-size: 1.05rem;
    color: #555;
    margin-bottom: 2rem;
  }

  .contact-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* FOOTER */
  .footer {
    text-align: center;
    padding: 2rem;
    font-size: 0.85rem;
    color: #999;
    border-top: 1px solid #eee;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 6rem 1.5rem 3rem;
      gap: 2.5rem;
    }

    .hero-tagline {
      max-width: 100%;
    }

    .hero-photo {
      max-width: 280px;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .locations-grid {
      grid-template-columns: 1fr;
    }

    .nav-links {
      display: none;
    }

    .section {
      padding: 3.5rem 1.25rem;
    }
  }
</style>
